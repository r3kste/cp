{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        // "-O2",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/.out"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "Rustc: rustc build active file",
      "command": "/usr/bin/rustc \"${file}\" -o \"${workspaceFolder}/.out\" && \"${workspaceFolder}/.out\"",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build: cargo or rustc",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/rust_build.sh ${fileDirname} ${fileBasenameNoExtension} ${workspaceFolder}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$rustc"
      ]
    }
  ],
  "version": "2.0.0"
}